<!doctype html>
<link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">

<title>Ingester</title>

<style>

body {
  font-family: 'Roboto', sans-serif;
}

.header {
  padding-bottom: 10px;
  padding-top: 10px;
  font-size: 25px;
}

.container {
  padding-left: 10px;
  margin: 20px;
}

</style>

<body>
  <div class="container">
    <div class="header">Ingest</div>

    <div>
    <form action="/ingester" method="post">
      Content: <input type="text" name="c" value="{{.FormContent}}">
      <input type="submit" value="Ingest">
    </form>
    </div>

    {{ if .Result }}
      <div class="result">
        <div class="header">Result</div>
        <pre>{{.Result}}</pre>
      </div>
    {{ end }}

    {{ if .Error }}
      <div class="error">
        <div class="header">Error</div>
        <pre>{{.Error}}</pre>
      </div>
    {{ end }}

  </div>
</body>
